<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ai.magicmirror.magicmirror.features.user_auth.login.LoginFragment">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:activity="ai.magicmirror.magicmirror.features.user_auth.login.LoginActivity">

        <EditText
            android:id="@+id/login_activity_phone_number_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:ems="10"
            android:hint="@string/login_activity_phone_number_text_view_hint"
            android:inputType="phone"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <Button
            android:id="@+id/login_activity_sign_in_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/login_activity_sign_in_button_text"
            app:layout_constraintEnd_toEndOf="@+id/login_activity_phone_number_edit_text"
            app:layout_constraintStart_toStartOf="@+id/login_activity_phone_number_edit_text"
            app:layout_constraintTop_toBottomOf="@+id/login_activity_phone_number_edit_text" />

        <Button
            android:id="@+id/login_activity_google_sign_in_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Google Sign-in"
            app:layout_constraintEnd_toEndOf="@+id/login_activity_sign_in_button"
            app:layout_constraintStart_toStartOf="@+id/login_activity_sign_in_button"
            app:layout_constraintTop_toBottomOf="@+id/login_activity_sign_in_button" />

        <TextView
            android:id="@+id/login_activity_error_message_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintBottom_toTopOf="@+id/login_activity_phone_number_edit_text"
            app:layout_constraintEnd_toEndOf="@+id/login_activity_phone_number_edit_text"
            app:layout_constraintStart_toStartOf="@+id/login_activity_phone_number_edit_text" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
